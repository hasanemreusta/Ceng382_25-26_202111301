@page
@model Week5.Pages.IndexModel
@{
    ViewData["Title"] = "Class Management";
}
<form method="post" asp-page-handler="Logout" class="text-end mb-3">
    <button class="btn btn-outline-danger btn-sm">Logout</button>
</form>

<h1 class="mb-4 text-center">Class Management</h1>

<!-- Filter Form -->
<div class="card p-4 mb-4 shadow-sm">
    <form method="get">
        <div class="row g-2 align-items-center">
            <div class="col-md-8">
                <input type="text" name="FilterClassName" value="@Model.FilterClassName" class="form-control" placeholder="Filter by class name..." />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-outline-primary w-100">Filter</button>
            </div>
        </div>
    </form>
</div>

<div class="row">
    <!-- Add/Edit Form -->
    <div class="col-lg-4 mb-4">
        <div class="card p-4 shadow-sm">
            <h4 class="card-title mb-3">@(Model.IsEditMode ? "Edit Class" : "Add Class")</h4>
            <form method="post">
                <input type="hidden" asp-for="EditId" />
                <input type="hidden" asp-for="IsEditMode" />
                <div class="mb-3">
                    <label class="form-label">Class Name</label>
                    <input type="text" class="form-control" asp-for="NewClass.ClassName" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Student Count</label>
                    <input type="number" class="form-control" asp-for="NewClass.StudentCount" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea class="form-control" asp-for="NewClass.Description"></textarea>
                </div>
                <button type="submit" class="btn btn-primary w-100" asp-page-handler="@(Model.IsEditMode ? "Update" : "Add")">
                    @(Model.IsEditMode ? "Update" : "Add")
                </button>
            </form>
        </div>
    </div>

    <!-- Class Table -->
    <div class="col-lg-8">
        <div class="card p-4 shadow-sm mb-3">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th data-export="ClassName">Class Name</th>
                            <th data-export="StudentCount">Student Count</th>
                            <th data-export="Description">Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.FilteredTableData)
                        {
                            <tr>
                                <td>@item.ClassName</td>
                                <td>@item.StudentCount</td>
                                <td>@item.Description</td>
                                <td>
                                    <div class="btn-group">
                                        <form method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm" asp-page-handler="Delete">Delete</button>
                                        </form>
                                        <form method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-warning btn-sm" asp-page-handler="Edit">Edit</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" href="?PageNumber=@i&FilterClassName=@Model.FilterClassName">@i</a>
                    </li>
                }
            </ul>
        </nav>

        <!-- JSON Export Section -->
        <div class="text-end mt-3">
            <form method="post" id="exportForm" asp-page-handler="Export" class="d-inline">
                <input type="hidden" name="SelectedExportColumns" id="SelectedExportColumns" value="" />
                <button type="submit" class="btn btn-secondary">
                    Export JSON
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Toggle selection on table header click for export columns
        document.querySelectorAll('th[data-export]').forEach(function(th) {
            th.addEventListener('click', function () {
                th.classList.toggle('export-selected');
                updateSelectedColumns();
            });
        });

        // Update hidden input with currently selected columns as a comma-separated string
        function updateSelectedColumns() {
            const selected = [];
            document.querySelectorAll('th.export-selected').forEach(function(th) {
                selected.push(th.getAttribute('data-export'));
            });
            document.getElementById('SelectedExportColumns').value = selected.join(',');
        }

        // Ensure hidden field is updated before form submission
        document.getElementById('exportForm').addEventListener('submit', function () {
            updateSelectedColumns();
        });
    </script>
}
