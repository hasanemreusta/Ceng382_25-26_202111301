

@page
@model Week5.Pages.IndexModel
@{
    ViewData["Title"] = "Class Information";
}

<div class="container mt-4">
    <h1 class="display-4 mb-4 text-primary">Class Information</h1>



    <!-- Filters -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <input type="text" class="form-control" 
                           name="FilterClassName" 
                           value="@Model.FilterClassName" 
                           placeholder="Class Name" />
                </div>
                <div class="col-md-4">
                    <input type="number" class="form-control" 
                           name="FilterStudentCount" 
                           value="@Model.FilterStudentCount" 
                           placeholder="Student Count" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Class Name</th>
                            <th>Student Count</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.DisplayClasses)
                        {
                            <tr>
                                <td>@item.ClassName</td>
                                <td>@item.StudentCount</td>
                                <td>@item.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- 
 generated by ChatGPT, OpenAI, April 4, 2025
Prompt used: "Create a responsive pagination UI for Razor Pages with Bootstrap 5 that includes:
- Previous/Next buttons with disabled states
- Page number links
- Active page highlighting
- URL parameter preservation for filters
- Accessibility tags (aria-label)"
-->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                    <a class="page-link" 
                       href="?PageNumber=@(Model.PageNumber - 1)&FilterClassName=@Model.FilterClassName&FilterStudentCount=@Model.FilterStudentCount">
                        &laquo;
                    </a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" 
                           href="?PageNumber=@i&FilterClassName=@Model.FilterClassName&FilterStudentCount=@Model.FilterStudentCount">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" 
                       href="?PageNumber=@(Model.PageNumber + 1)&FilterClassName=@Model.FilterClassName&FilterStudentCount=@Model.FilterStudentCount">
                        &raquo;
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>