@page
@model Week5.Pages.IndexModel
@{
    ViewData["Title"] = "Class Management";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Class Management</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <h1>Class Management</h1>

        <!-- Filter Form -->
        <form method="get" class="mb-4">
            <div class="row g-2 align-items-center">
                <div class="col-auto">
                    <input type="text" name="FilterClassName" value="@Model.FilterClassName" class="form-control" placeholder="Filter by class name..." />
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-outline-primary">Filter</button>
                </div>
            </div>
        </form>

        <div class="row">
            <!-- Add/Edit Form -->
            <div class="col-md-4">
                <div class="card p-3 mb-4">
                    <h4>@(Model.IsEditMode ? "Edit Class" : "Add Class")</h4>
                    <form method="post">
                        <input type="hidden" asp-for="EditId" />
                        <input type="hidden" asp-for="IsEditMode" />
                        <div class="mb-3">
                            <label class="form-label">Class Name</label>
                            <input type="text" class="form-control" asp-for="NewClass.ClassName" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Student Count</label>
                            <input type="number" class="form-control" asp-for="NewClass.StudentCount" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" asp-for="NewClass.Description"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary" asp-page-handler="@(Model.IsEditMode ? "Update" : "Add")">
                            @(Model.IsEditMode ? "Update" : "Add")
                        </button>
                    </form>
                </div>
            </div>

            <!-- Class Table -->
            <div class="col-md-8">
                <div class="table-section">
                    <table class="table table-bordered table-striped">
                        <thead class="table-light">
                            <tr>
                                <th>Class Name</th>
                                <th>Student Count</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.FilteredTableData)
                            {
                                <tr>
                                    <td>@item.ClassName</td>
                                    <td>@item.StudentCount</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <div class="btn-group">
                                            <form method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm" asp-page-handler="Delete">Delete</button>
                                            </form>
                                            <form method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-warning btn-sm" asp-page-handler="Edit">Edit</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link" href="?PageNumber=@i&FilterClassName=@Model.FilterClassName">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
